{
    "manifest_version": 3,
    "name": "Gender Pay Gap UK for Linkedin",
    "description": "A chrome extension which can be used on company or school pages on Linkedin to view the gender pay gap data if it has been submitted to the UK government",
    "version": "0.0.1",
    "permissions": [
        "storage",
        "scripting",
        "declarativeContent",
        "tabs"
    ],
    "host_permissions": [
        "https://www.linkedin.com/company/",
        "https://www.linkedin.com/school/"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Click Me",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/company/*",
                "https://www.linkedin.com/school/*"
            ],
            "js": [
                "/content.js"
            ]
        }
    ],
    "externally_connectable": {
        "matches": [
            "https://www.linkedin.com/company/*",
            "https://www.linkedin.com/school/*"
        ]
    },
    "options_page": "options.html",
    "devtools_page": "devtools.html"
}